              </li>
            </ul>
            <span class="navbar-text">
             
            </span>
          </div>
        </div>
      </nav>
    </header>
    
    <h1>All schedules</h1>
    <table  class="table table-striped">
        <thead>
            <tr>                
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Day</th> 
                <th>Start </th>
                <th>End </th> 
            </tr> 
        </thead>
        <tbody>
            <% for (let i=0; i < users.length; i++){ %>
            <tr>                
                <td data-label="firstname"><%= users[i].firstname %></a></td>
                <td data-label="lastname"><%= users[i].lastname %></td>
                <td data-label="email"><%= users[i].email %></td>
                <td data-label="day" ><%= schedules[i].sday %></div></td>
                <td data-label="start" ><%= schedules[i].start_at %></div></td>
                <td data-label="end" ><%= schedules[i].end_at %></div></td>
                
            </tr>
            <% } %> 
        </tbody>
    </table>
    <footer class="position-absolute bottom-0">
        <p></p>
    </footer>
</body>
